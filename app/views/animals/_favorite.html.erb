 <% if animal.favorited_by?(current_user) %>
    <p>
      <%= link_to animal_favorites_path(animal), method: :delete , class: "text-danger" do %>
        <i class="fas fa-heart"></i><%= animal.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to animal_favorites_path(animal), method: :post , class: "text-info" do %>
        <i class="far fa-heart"></i><%= animal.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>