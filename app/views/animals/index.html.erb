<h3 class="p-3 bg-danger  text-center  text-white">-Navigator Index-</h3>
<div class="card-group mb-3">

  <% @animals.each do |animal| %>
  <div class="card" style="width: 18rem">

    <%= link_to animal_path(animal) do %>
    <%= image_tag animal.get_profile_image(300,300), class:"card-img-top";%>
    <% end %>

    <div class="card-body">
     <h5 class="card-title"><%= link_to animal.title ,animal_path(animal)%></h5>
     <%= link_to user_path(animal.user.id) do %>
     <%= image_tag animal.user.get_profile_image(100,100), class:"mt-3 rounded-circle";  %>
     <% end %>
     <%= render 'favorite', animal: animal %>
     <time><%= animal.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
    </div>
  </div>
    <% end %>