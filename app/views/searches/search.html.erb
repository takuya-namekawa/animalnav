<h3 class="p-3 bg-danger  text-center  text-white">-Search Results-</h3>
<table class='table'>
   <% if @range == "User" %>
   <thead>
     <tr>
      <th>プロフィール画像</th>
      <th>名前</th>
      <th>自己紹介</th>
      <th colspan="3"></th>
    </tr>
</thead>
<tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(200,200), class:"mt-3 rounded-circle"; %></td>
      <td><%= user.username %></td>
      <td><%= user.profile %></td>
    </tr>
  <% end %>
</tbody>
  <% else %>
<thead>
    <tr>
      <th>プロフィール画像</th>
      <th>名前</th>
      <th>自己紹介</th>
      <th colspan="3"></th>
    </tr>
</thead>
<tbody>
    <tbody>
      <% @animals.each do |animal| %>
        <tr>
          <td><%= image_tag animal.get_profile_image(200,200), class:"mt-3 rounded-circle"; %></td>
          <td><%= animal.title %></td>
          <td><%= animal.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>